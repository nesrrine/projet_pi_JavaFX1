<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Alert?>
<?import javafx.scene.control.Alert.AlertType?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LogementController">
    <children>
        <!-- Formulaire -->
        <TextField fx:id="tfTitre" promptText="Titre" />
        <Label fx:id="labelTitre" styleClass="messageLabel" />

        <TextArea fx:id="taDescription" promptText="Description" />
        <Label fx:id="labelDescription" styleClass="messageLabel" />

        <TextField fx:id="tfLocalisation" promptText="Localisation" />
        <Label fx:id="labelLocalisation" styleClass="messageLabel" />

        <TextField fx:id="tfPrix" promptText="Prix" />
        <Label fx:id="labelPrix" styleClass="messageLabel" />



        <!-- Boutons -->
        <HBox spacing="10">
            <Button fx:id="btnAjouter" text="Ajouter" onAction="#ajouterLogement"/>
        </HBox>
    </children>
</VBox>
