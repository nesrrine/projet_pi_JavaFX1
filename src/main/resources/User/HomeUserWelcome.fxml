<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx/21.0.2"
      xmlns:fx="http://javafx.com/fxml/1"
      alignment="TOP_CENTER"
      spacing="20"
      style="-fx-padding: 30; -fx-background-color: white;"
fx:controller="controllers.User.HomeController">

    <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #4CAF50;"
           text="Bienvenue dans votre espace utilisateur" />

    <Label style="-fx-text-fill: #555555;"
           text="Ici vous pouvez gérer votre profil, consulter les produits ou envoyer des réclamations."
           wrapText="true" />

    <Button fx:id="logoutButton" onAction="#handleLogout"
            style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;"
            text="Déconnexion" />

</VBox>
