<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns:fx="http://javafx.com/fxml/1"
           xmlns="http://javafx.com/javafx/21.0.2"
           fx:controller="controllers.Admin.GestionRestaurantsController"
           stylesheets="@/styles/style.css"
           prefHeight="550" prefWidth="750"
           style="-fx-background-color: #ffffff; -fx-background-radius: 15; -fx-padding: 20;">

    <children>
        <VBox spacing="20" alignment="TOP_CENTER">
            <Label text="Gestion des Restaurants">
                <font>
                    <Font name="Segoe UI Bold" size="22.0"/>
                </font>
            </Label>

            <TableView fx:id="restaurantTable" prefWidth="700" prefHeight="450" styleClass="styled-table">
                <columns>
                    <TableColumn fx:id="nomColumn" text="Nom" prefWidth="150"/>
                    <TableColumn fx:id="localisationColumn" text="Localisation" prefWidth="200"/>
                    <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="150"/>
                    <TableColumn fx:id="prixColumn" text="Prix" prefWidth="100"/>
                    <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="150"/>
                </columns>
            </TableView>

        </VBox>
    </children>
</StackPane>
